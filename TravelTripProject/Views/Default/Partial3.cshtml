@using TravelTripProject.Models.Classes
@model List<Blog>
<div class="padding1">
    <h4>Our Best Blogs</h4>
    <div class="box-left">
        @foreach (var item in Model)
        {
            <div class="bot-img">
                <img src="@item.BlogImage" alt="" />
            </div>
            <div class="bot-desc">
                <p>@item.Aciklama.Substring(0,1)...</p>
            </div>
            <div class="clear"></div>
        }
    </div>
    <div class="box1-left">
        @foreach (var item in Model)
        {
            <div class="bot-img">
                <img src="@item.BlogImage" alt="" />
            </div>
            <div class="bot-desc1">
                <p>@item.Aciklama...</p>
            </div>
            <div class="clear"></div>
        }
    </div>
</div>
